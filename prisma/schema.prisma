generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Appointment {
  id          Int      @id @default(autoincrement())
  dateTime    DateTime @db.Timestamptz(6)
  firstName   String
  lastName    String
  clientEmail String
  userId      String?
  status      String
  User        User?    @relation(fields: [userId], references: [id])
}

model User {
  id          String        @id @unique
  email       String        @unique
  password    String
  firstName   String
  lastName    String
  role        String
  picture     String
  Appointment Appointment[]
}
